<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.chaima.donatefood">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ChooseProfil">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Donater.ProfileDonater"
            android:label="@string/Donater"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Donater.ActivitySaveDon"
            android:label="@string/SaveDonation"
            android:theme="@style/intentTheme" />
        <activity
            android:name=".Annoncer.ProfileAnnoncer"
            android:label="@string/title_activity_profile_annoncer"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Annoncer.SaveNeedyActivity"
            android:label="@string/saveNeedy"
            android:theme="@style/intentTheme" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="YOUR_API_KEY_FROM_GOOGLE_DEV_CONSOLE" />

        <activity
            android:name=".Annoncer.UpdateNeedyActivity"
            android:theme="@style/intentTheme" />
        <activity
            android:name=".TransporterVolunteer.SavePreferences"
            android:label="@string/savePerf"
            android:theme="@style/intentTheme" />
        <activity
            android:name=".Donater.UpdateDonActivity"
            android:theme="@style/intentTheme" />
        <activity android:name=".TransporterVolunteer.ProfileTransporter" />
        <activity android:name=".SelectDonActivity" />
        <activity android:name=".CitiesListView" />
        <activity android:name=".Main2Activity"></activity>
    </application>

</manifest>